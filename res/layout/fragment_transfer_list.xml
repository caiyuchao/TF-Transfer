<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout 
        android:id="@+id/transfer_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        
        <Button 
            android:id="@+id/transfer_list_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/back_32"
            android:layout_centerVertical="true"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="传输列表"/>
        
        
    </RelativeLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/transfer_list_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/transfer_list_title">
        
        <android.support.v4.view.PagerTabStrip
			android:id="@+id/transfer_list_TabStrip"
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			android:textColor="@color/theme_color"
			android:gravity="center"/>
        
     </android.support.v4.view.ViewPager>

</RelativeLayout>
