<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView 
        android:id="@+id/item_transfer_qrCode"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/icon_tf"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_transfer_qrCode"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        
        <TextView 
	        android:id="@+id/item_transfer_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000"
	        android:textSize="15sp"
	        android:text="ID:"/>
        
        <TextView 
	        android:id="@+id/item_transfer_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000"
	        android:layout_marginTop="5dp"
	        android:textSize="12sp"
	        android:text="2016-1-1"/>
        
    </LinearLayout>
    
</RelativeLayout>
