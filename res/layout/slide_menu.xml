<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button 
        android:id="@+id/send_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/send_64"
        android:text="发送"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:background="#00000000"/>
    
    <Button 
        android:id="@+id/receive_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/receive_64"
        android:text="接收"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:background="#00000000"
        android:layout_below="@id/send_file"
        android:layout_marginTop="50dp"/>
    
    <Button 
        android:id="@+id/computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/computer"
        android:text="电脑传输"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:background="#00000000"
        android:layout_below="@id/receive_file"
        android:layout_marginTop="50dp"/>
    
</RelativeLayout>
